#map_canvas
%script
  display_map(40.7316, -73.9901, 12);

.row
  .three.columns
    .controls
      .new
        = button_tag 'New Itinerary', :id => 'new_itinerary', :class => 'button radius success tiny'
      .taskform.hide
        = form_tag do
          = label_tag 'name'
          = text_field_tag 'name'
          = label_tag 'start_date', 'Start Date'
          = text_area_tag 'start_date'
          = hidden_field_tag 'itinerary_id'
          = link_to('Cancel', '#', :id=>'cancel_itinerary', :class => 'button radius tiny alert')
          = submit_tag 'New Itinerary', :id => 'create_itinerary', :class => 'button radius tiny'
          = submit_tag 'Edit Itinerary', :id => 'update_itinerary', :class => 'button radius tiny success'
  .nine.columns

%script
  var itineraries = [];
%ul#itineraries
  - @itineraries.each do |itinerary|
    %li
      .itinerary= link_to('Delete', '#', :class => 'delete_itinerary button radius alert tiny')
      .itinerary= link_to('Edit', '#', :class => 'edit_itinerary button radius tiny')
      .itinerary= itinerary.name
      .itinerary.hide= itinerary.id
      .clear